{% comment %}
  Collections grid section for PerfectFeast
  Simple, elegant display of all collections
{% endcomment %}

<div class="bg-gray-50 py-12">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{{ section.settings.title | default: 'Our Collections' }}</h1>
      {% if section.settings.subtitle != blank %}
        <p class="text-gray-600 text-lg max-w-3xl mx-auto">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <!-- Collections Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for collection in collections %}
        <a href="{{ collection.url }}" class="group block bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="relative h-64 overflow-hidden bg-gray-100">
            {% if collection.image %}
              {% render 'image',
                class: 'w-full h-full object-cover transition-transform duration-500 group-hover:scale-105',
                image: collection.image,
                width: 600,
                height: 400,
                crop: 'center'
              %}
            {% else %}
              <div class="absolute inset-0 flex items-center justify-center bg-gray-200">
                <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                </svg>
              </div>
            {% endif %}
            
            <!-- Collection Count Badge -->
            <div class="absolute top-3 right-3 bg-white bg-opacity-90 px-3 py-1 rounded-full text-sm font-medium text-gray-700">
              {{ collection.products_count }} products
            </div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-brandPrimary transition-colors duration-200">{{ collection.title }}</h3>
            
            {% if collection.description != blank and section.settings.show_description %}
              <p class="text-gray-600 line-clamp-2">{{ collection.description | strip_html | truncatewords: 15 }}</p>
            {% endif %}
            
            <!-- View Collection Link -->
            <div class="mt-4 flex items-center text-brandPrimary font-medium">
              <span>Shop Collection</span>
              <svg class="w-4 h-4 ml-1 group-hover:ml-2 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      {% else %}
        <div class="col-span-full flex flex-col items-center justify-center text-center p-12 bg-white rounded-xl shadow">
          <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No collections found</h3>
          <p class="text-gray-500">There are no collections to display right now.</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.collections_grid",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop Our Collections"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Browse all our carefully curated collections"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection descriptions",
      "default": true
    }
  ]
}
{% endschema %}