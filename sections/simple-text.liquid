<section class="py-16">
  <div class="container mx-auto px-4 ">
    <div class="{% if section.settings.text_alignment == 'center' %}text-center md:text-center{% elsif section.settings.text_alignment == 'right' %}text-right md:text-right{% else %}text-left md:text-left{% endif %} flex-1">
      <h3 class="text-2xl md:text-4xl font-bold  mb-2">
        {{ section.settings.heading }}
      </h3>
      <p class="text-lg  mb-0">
        {{ section.settings.subtext }}
      </p>
    </div>
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="mt-6 md:mt-0 md:ml-8">
        <a href="{{ section.settings.button_url }}" class="btn btn--secondary font-bold">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}

    {% if section.settings.embed_form != blank %}
      <div class="mt-8">
        {{ section.settings.embed_form }}
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
  {
    "name": "Simple Text",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Add Heading Here"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "Add your subtext here"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "REQUEST A REMINDER"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "/"
      }, {
        "type": "html",
        "id": "embed_form",
        "label": "Embed form code"

      }

    ],

    "presets": [
      {
        "name": "Simple Text",
        "category": "Text"
      }
    ]
  }
{% endschema %}