<!-- sections/gift-certificates-tabs.liquid -->
{% comment %} 
                                                            Gift Certificates Tabs Section
                                                            Features: Interactive tabs with product certificates, responsive layout 
{% endcomment %}

<section class="info-tab-section py-16">
  <div class="container mx-auto px-4">
    <div class="about-main-holder flex flex-row-reverse justify-between md:flex-col md:items-start lg:flex-row-reverse lg:justify-between">
      <!-- Text/Content Area -->
      <div class="overflow-hidden ">
        <h2 class="text-center m-0 py-10 px-0 bg-white uppercase md:py-8 md:px-3">
          {{ section.settings.main_title | default: 'Perfect Feast Gift Certificates' }}
        </h2>

        <div class="about-tabs">
          <!-- Tab Navigation -->
          <ul class="tabs-links bg-white flex justify-start p-0 !mb-0">
            {% for block in section.blocks %}
              <li class="w-[20%] border-l border-gray-100 first:border-0 inline-block">
                <a
                  href="#tabs-{{ forloop.index }}"
                  class="tab-link h-[50px] flex items-center justify-center p-0  text-sm text-gray-800 uppercase hover:bg-gray-100 cursor-pointer
                          {% if forloop.first %}border border-brandPrimary bg-gray-100 
                          {%else %}bg-white
                          {% endif %}"
                  data-tab="{{ forloop.index }}"
                  {{ block.shopify_attributes }}>
                  {% if block.settings.tab_icon != blank %}
                    <img
                      src="{{ block.settings.tab_icon | image_url: width: 50 }}"
                      alt="{{ block.settings.tab_icon.alt | default: block.settings.tab_title }}"
                      class="h-6 md:h-5">
                  {% endif %}
                  <span class="hidden lg:block text-sm font-semibold text-left md:text-[13px]">
                    {{ block.settings.tab_title }}
                    {% if block.settings.tab_subtitle != blank %}
                      <em class="not-italic text-[9px] text-gray-600 block md:text-[8px]">{{ block.settings.tab_subtitle }}</em>
                    {% endif %}
                  </span>
                </a>
              </li>
            {% endfor %}
          </ul>

          <!-- Tab Content -->
          {% for block in section.blocks %}
            <div
              class="tabs-content bg-[#f9fafb] p-4 lg:p-12 flex flex-col md:flex-row items-center justify-between gap-8
                        md:p-8
                        {% unless forloop.first %}hidden{% endunless %}"
              id="tabs-{{ forloop.index }}"
              {{ block.shopify_attributes }}>

              <!-- Info Content -->
              <div class="info text-gray-700 text-sm w-full md:w-3/5">
                {% if block.settings.content_title != blank %}
                  <h4 class="text-2xl text-gray-800 uppercase font-bold mb-4">
                    {{ block.settings.content_title }}
                  </h4>
                {% endif %}

                {% if block.settings.content_description != blank %}
                  <div class="certificate-description">
                    {{ block.settings.content_description }}
                  </div>
                {% endif %}
              </div>

              <!-- Buy Section -->
              <div class="w-full md:w-2/5 text-center">
                {% if block.settings.certificate_image != blank %}
                  <img
                    src="{{ block.settings.certificate_image | image_url: width: 300 }}"
                    alt="{{ block.settings.certificate_image.alt | default: block.settings.content_title }}"
                    class="block mx-auto mb-8 w-[90%] h-auto">
                {% endif %}

                {% if block.settings.cta_text != blank %}
                  <a href="{{ block.settings.cta_url | default: '#' }}" class="btn btn--primary">
                    {{ block.settings.cta_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

