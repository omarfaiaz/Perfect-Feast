<!-- sections/contact-form-app.liquid -->

<div class="bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

  <div class="mb-8">
    <h2 class="text-center text-brandPrimary">
    {{ section.settings.main_heading | default: 'Contact Us' | upcase }}
  </h2>
  </div>

  
    <div class="grid grid-cols-1 {% if section.settings.show_contact_info %}lg:grid-cols-2{% endif %} gap-8">

    
      <div class="{% if section.settings.show_contact_info %}order-1{% endif %}">
        <div class="bg-white rounded-xl shadow-lg p-8">
        {% if section.settings.show_heading %}
      <div class="mb-12">
        <h3 class="text-brandPrimary mb-4">
          {{ section.settings.heading | default: 'HAVE QUESTIONS? NEED HELP?' }}
        </h3>
        {% if section.settings.subheading != blank %}
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-4">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="text-gray-600 max-w-2xl mx-auto">
            {{ section.settings.description }}
          </p>
        {% endif %}
      </div>
    {% endif %}

          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {% render block %}
            {% endfor %}
          {% else %}
            {% if section.settings.embed_form != blank %}
              <div class="embedded-form">
                {{ section.settings.embed_form }}
              </div>
            {% endif %}
          {% endif %}
        </div>
      </div>

     
      {% if section.settings.show_contact_info %}
        <div class="order-2">
          <div class="bg-brandPrimary rounded-xl shadow-lg p-8 h-full text-white">
            <h3 class="text-xl font-bold mb-6">
              {{ section.settings.contact_info_heading | default: 'CONTACT INFO' }}
            </h3>

            <div class="space-y-6">
              {% if section.settings.contact_address != blank %}
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 p-2 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4 mt-1">
                    {% render 'location-icon' %}
                  </div>
                  <div class="text-white">
                    <h4 class="font-semibold mb-1">Address:</h4>
                    <p class="leading-relaxed opacity-90">{{ section.settings.contact_address }}</p>
                  </div>
                </div>
              {% endif %}

              {% if section.settings.contact_email != blank %}
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 p-2 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4 mt-1">
                    <svg class="w-4 h-4 text-white" fill="#ED2129" viewBox="0 0 20 20">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                  </div>
                  <div class="text-white">
                    <h4 class="font-semibold mb-1">Email:</h4>
                    <a href="mailto:{{ section.settings.contact_email }}" class="!text-white">
                      {{ section.settings.contact_email }}
                    </a>
                  </div>
                </div>
              {% endif %}

              {% if section.settings.contact_phone != blank %}
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 p-2 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4 mt-1">
                    <svg class="w-4 h-4 text-white" fill="#ED2129" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                  </div>
                  <div class="text-white">
                    <h4 class="font-semibold mb-1">Call Us:</h4>
                    <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' }}" class="!text-white">
                      {{ section.settings.contact_phone }}
                    </a>
                  </div>
                </div>
              {% endif %}

              {% if section.settings.show_social_links %}
  <div class="pt-4 border-t border-white border-opacity-20">
    <h4 class="font-semibold mb-3">Follow Us:</h4>
    <div class="flex flex-wrap gap-3">
      {% if settings.social_facebook != blank %}
        <a href="{{ settings.social_facebook }}" class="w-8 h-8 bg-white bg-opacity-20 text-white rounded-full flex items-center justify-center hover:bg-opacity-30 transition-colors duration-200" target="_blank" rel="noopener">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
