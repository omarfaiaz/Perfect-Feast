<!-- sections/testimonial-slide.liquid -->
{% comment %} 
                                        Testimonial Slide Section
                                      Features: Slider with testimonials, author names
{% endcomment %}

<section class="bg-brandPrimary py-20 relative">
  <div class="container mx-auto px-4 max-w-7xl">
    <h2 class="text-center text-white text-4xl md:text-5xl font-bold mb-10">
      {{ section.settings.heading | default: "What our customers are saying" }}
    </h2>
    <div class="testimonial-slider">
      {% for block in section.blocks %}
        <div>
          <div class="flex items-center justify-center">
            <svg class="hidden lg:block w-16 h-16 text-white mr-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 48 48">
              <text x="0" y="40" font-size="48" font-family="serif" fill="white">“</text>
            </svg>
            <div class="max-w-3xl text-center">
              <p class="italic text-white text-xl md:text-lg leading-snug mb-8">
                {{ block.settings.testimonial }}
              </p>
              <div class="text-white font-bold text-xl my-4">
                {{ block.settings.author | upcase }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  {% if section.settings.testimonial_image %}
  <img src="{{ section.settings.testimonial_image | image_url: width: 880 }}" alt="Testimonial Image" class="hidden lg:block absolute -bottom-20 left-0 w-70 h-auto object-cover rounded-tl-lg">
  {% endif %}
</section>


{% schema %}
{
  "name": "Testimonial Slide",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our customers are saying"
    },{
        "type": "image_picker",
        "id": "testimonial_image",
        "label": "Upload Corner Image",
        "info": "This image will appear in the bottom left corner of the section."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "This went very well from the employees perspective and was very easy to do from the employer perspective. I have also forwarded this to my husband and a few other friends who own business’as this is an affordable way to give at holiday time. Thanks,"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "BARB"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Slide",
      "blocks": [
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}