{% comment %}  Account section — aligned with PerfectFeast styles.
                Features:
                - Order history (paginated)
                - Account details + address link
                - Account navigation (edit details, addresses, sign out)
                - Uses Tailwind utility classes consistent with site
{% endcomment %}

<section class="py-12 bg-gray-50 min-h-[60vh]">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main: Orders -->
      <div class="lg:col-span-2">
        <div class="mb-6 flex items-center justify-between">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900">My Account</h3>
          <form method="post" action="/account/logout">
            <button type="submit" class="px-4 py-2 cursor-pointer text-sm font-semibold text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition">
              Sign out
            </button>
          </form>
        </div>

        <div class="bg-white rounded-2xl shadow p-6">
          <h2 class="text-lg font-semibold text-gray-800 mb-4">Order history</h2>

          {% assign orders_count = customer.orders | size %}
          {% if orders_count > 0 %}
            {% paginate customer.orders by 10 %}
              <div class="grid grid-cols-1 gap-6">
                {% for order in customer.orders %}
                  <article class="flex items-start gap-4 border-b last:border-b-0 pb-4">
                    <div class="w-28 h-20 bg-gray-100 rounded overflow-hidden flex items-center justify-center flex-shrink-0">
                      {% if order.line_items.first.image %}
                        <img
                          src="{{ order.line_items.first.image | img_url: '400x' }}"
                          alt="{{ order.line_items.first.title }}"
                          class="w-full h-full object-cover">
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                      {% endif %}
                    </div>

                    <div class="flex-1">
                      <a href="{{ order.customer_url }}" class="text-sm font-medium text-gray-900 hover:text-brandPrimary">
                        {{ order.name }}
                      </a>
                      <div class="mt-1 text-sm text-gray-600">
                        <span class="mr-4">Placed: {{ order.created_at | date: format: "%b %d, %Y" }}</span>
                        <span class="mr-4">Total: {{ order.total_price | money }}</span>
                        <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-700">{{ order.financial_status_label }}</span>
                      </div>

                      <div class="mt-3 text-sm text-gray-700 flex flex-wrap gap-2">
                        {% for li in order.line_items limit: 3 %}
                          <span class="inline-flex items-center gap-2 bg-gray-50 px-3 py-1 rounded">
                            {{ li.quantity }}× {{ li.title | truncate: 40 }}
                          </span>
                        {% endfor %}
                        {% if order.line_items.size > 3 %}
                          <span class="inline-flex items-center gap-2 bg-gray-50 px-3 py-1 rounded">+{{ order.line_items.size | minus: 3 }} more</span>
                        {% endif %}
                      </div>
                    </div>

                    <div class="text-right text-sm">
                      <p class="font-medium text-gray-900">{{ order.total_price | money }}</p>
                      <a href="{{ order.customer_url }}" class="mt-2 inline-block text-xs text-brandPrimary hover:underline">View details</a>
                    </div>
                  </article>
                {% endfor %}
              </div>

              <div class="mt-6">
                {% render 'pagination'
                  , pagination: paginate %}
              </div>
            {% endpaginate %}
          {% else %}
            <div class="py-12 text-center">
              <p class="text-gray-600 mb-6">You currently don't have any orders.</p>
              <a href="/" class="btn btn--primary">Start shopping</a>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Sidebar: Account Details & Links -->
      <aside class="space-y-6">
        <div class="bg-white rounded-2xl shadow p-6">
          <h3 class="text-sm font-semibold text-gray-700 mb-3">Account</h3>
          <div class="text-sm text-gray-800 mb-4">
            <div class="font-medium">{{ customer.first_name }} {{ customer.last_name }}</div>
            <div class="text-gray-600">{{ customer.email }}</div>
          </div>

          <nav class="flex flex-col gap-2 text-sm">
            <a href="{{ routes.account_profile_url }}" class="block px-3 py-2 rounded hover:bg-gray-50 text-gray-700">Edit account details</a>
            <a href="{{ routes.account_addresses_url }}" class="block px-3 py-2 rounded hover:bg-gray-50 text-gray-700">Manage addresses</a>
          </nav>
        </div>

        {% if customer.default_address %}
          <div class="bg-white rounded-2xl shadow p-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Default address</h3>
            <address class="not-italic text-sm text-gray-700">
              {{ customer.default_address | format_address }}
              {% if customer.default_address.phone %}
                <br><a href="tel:{{ customer.default_address.phone | strip | remove: ' ' }}" class="text-sm text-brandPrimary hover:underline mt-2 inline-block">
                  {{ customer.default_address.phone }}
                </a>
              {% endif %}
            </address>
            <a href="{{ routes.account_addresses_url }}" class="mt-4 inline-block text-sm text-brandPrimary hover:underline">
              Manage addresses
            </a>
          </div>
        {% endif %}


        <div class="bg-white rounded-2xl shadow p-6 text-sm">
          <h3 class="text-sm font-semibold text-gray-700 mb-3">Security</h3>
          <a href="{{ routes.account_details_url }}" class="block px-3 py-2 rounded hover:bg-gray-50 text-gray-700">Change password</a>
        </div>
      </aside>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Customer account",
    "settings": [],
    "presets": [
      {
        "name": "Account"
      }
    ]
  }
{% endschema %}