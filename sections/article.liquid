{% comment %} 
  Standard Article Page Section 
{% endcomment %}

<section class="py-12 bg-white">
  <div class="container mx-auto px-4 max-w-3xl">
    {% if article.image %}
      <img
        src="{{ article.image | image_url: width: 900 }}"
        alt="{{ article.title }}"
        class="w-full h-72 object-cover rounded mb-8" />
    {% endif %}
    <h1 class="text-4xl font-bold text-brandPrimary mb-4">{{ article.title }}</h1>
    <div class="text-sm text-gray-500 mb-6">
      By {{ article.author }} | Posted on {{ article.published_at | date: "%B %d, %Y" }}
    </div>
    <div class="prose prose-lg max-w-none text-gray-800 mb-8">
      {{ article.content }}
    </div>
    {% if article.tags.size > 0 %}
      <div class="mt-6">
        <span class="font-semibold text-gray-700 mr-2">Tags:</span>
        {% for tag in article.tags %}
          <span class="inline-block bg-gray-100 text-gray-600 text-xs px-3 py-1 rounded mr-2 mb-2">{{ tag }}</span>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "t:general.article",
    "settings": []
  }
{% endschema %}