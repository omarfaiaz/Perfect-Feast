<!-- sections/benefit-box.liquid -->

<section class="py-16 bg-brandNeutral">
<div class="container mx-auto px-4">
  
  {% if section.settings.show_heading %}
    <div class="text-center mb-{{ section.settings.heading_margin }}">
      <h2 class="text-{{ section.settings.heading_size }} font-{{ section.settings.heading_weight }} text-{{ section.settings.heading_color }} mb-4">
        {{ section.settings.heading | default: 'Why Choose Our Gift Certificates?' }}
      </h2>
      {% if section.settings.subheading != blank %}
        <p class="text-{{ section.settings.subheading_size }} text-{{ section.settings.subheading_color }} max-w-3xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="grid grid-cols-1 {% if section.settings.layout == 'two-column' %}lg:grid-cols-2{% elsif section.settings.layout == 'three-column' %}md:grid-cols-3{% endif %} gap-{{ section.settings.column_gap }}">
    
    {% for block in section.blocks %}
      <div class="bg-{{ section.settings.card_bg_color }} rounded shadow-{{ section.settings.card_shadow_size }} p-{{ section.settings.card_padding }} {% if section.settings.enable_hover_effect %}hover:shadow-{{ section.settings.card_hover_shadow }} hover:-translate-y-1 transition-all duration-300{% endif %}" {{ block.shopify_attributes }}>
        
        {% if block.settings.icon_type != 'none' %}
          <div class="mb-6">
            {% if block.settings.icon_type == 'emoji' %}
              <span class="text-{{ section.settings.icon_size }} block">{{ block.settings.emoji | default: 'üéÅ' }}</span>
            {% elsif block.settings.icon_type == 'svg' %}
              <div class="w-{{ section.settings.icon_svg_size }} h-{{ section.settings.icon_svg_size }} text-red-500 mb-2">
                <svg fill="currentColor" viewBox="0 0 20 20" class="w-full h-full">
                  <path fill-rule="evenodd" d="M5 5a3 3 0 015-2.236A3 3 0 0118 5v6.75a.75.75 0 01-.75.75h-1.5a.75.75 0 01-.75-.75V13a1 1 0 00-1-1H8a1 1 0 00-1 1v.75a.75.75 0 01-.75.75h-1.5a.75.75 0 01-.75-.75V5zm7 0a1 1 0 00-2 0v4.25c0 .414.336.75.75.75h2.5a.75.75 0 00.75-.75V5z" clip-rule="evenodd"></path>
                </svg>
              </div>
            {% endif %}
          </div>
        {% endif %}
        
        {% if block.settings.title != blank %}
          <h3 class="text-{{ section.settings.benefit_title_size }} font-{{ section.settings.benefit_title_weight }} text-{{ section.settings.benefit_title_color }} mb-4">
            {{ block.settings.title }}
          </h3>
        {% endif %}
        
        <div class="text-{{ section.settings.benefit_text_size }} text-{{ section.settings.benefit_text_color }} leading-relaxed space-y-3">
          {{ block.settings.content }}
        </div>
        
        {% if block.settings.cta_text != blank and block.settings.cta_url != blank %}
          <div class="mt-6">
            <a href="{{ block.settings.cta_url }}" 
               class="inline-flex items-center px-4 py-2 text-sm font-medium text-{{ section.settings.cta_text_color }} bg-{{ section.settings.cta_bg_color }} hover:bg-{{ section.settings.cta_hover_color }} rounded transition-colors duration-200">
              {{ block.settings.cta_text }}
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    {% endfor %}
    
  </div>
  
  <!-- Bottom CTA Section -->
  {% if section.settings.show_bottom_cta %}
    <div class="text-center mt-{{ section.settings.section_padding }}">
      {% if section.settings.bottom_cta_heading != blank %}
        <h3 class="text-2xl font-bold text-{{ section.settings.heading_color }} mb-4">
          {{ section.settings.bottom_cta_heading }}
        </h3>
      {% endif %}
      
      {% if section.settings.bottom_cta_text != blank %}
        <p class="text-{{ section.settings.subheading_color }} mb-6 max-w-2xl mx-auto">
          {{ section.settings.bottom_cta_text }}
        </p>
      {% endif %}
      
      {% if section.settings.bottom_cta_button_text != blank and section.settings.bottom_cta_button_url != blank %}
        <a href="{{ section.settings.bottom_cta_button_url }}" 
           class="inline-block px-8 py-3 bg-brandPrimary hover:from-red-600 hover:to-red-700 text-white font-bold rounded-lg transition-all duration-200 transform hover:-translate-y-1 hover:shadow-lg">
          {{ section.settings.bottom_cta_button_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
  
</div>
</section>


