<!-- sections/simple-cta.liquid -->
{% comment %} 
                                              Simple Call to Action Section
                                            Features: Heading, text, button
{% endcomment %}

<section class="bg-brandPrimary py-8">
  <div class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between max-w-7xl">
    <div class="{% if section.settings.text_alignment == 'center' %}text-center{% elsif section.settings.text_alignment == 'right' %}text-right{% else %}text-left{% endif %} flex-1">
      <h3 class="text-2xl md:text-4xl font-bold text-white mb-2">
        {{ section.settings.heading }}
      </h3>
      <p class="text-lg text-white mb-0">
        {{ section.settings.subtext }}
      </p>
    </div>
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="mt-6 md:mt-0 md:ml-8 self-start md:self-center ">
        <a href="{{ section.settings.button_url }}" class="btn btn--secondary font-bold">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Simple CTA",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Add Heading Here"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "Add your subtext here"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "REQUEST A REMINDER"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ],
    "presets": [
      {
        "name": "Simple CTA"
      }
    ]
  }
{% endschema %}