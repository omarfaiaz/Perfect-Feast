<section class="feature-boxes-section py-16 bg-[#f7f7f8]">
  <div class="container mx-auto px-4 max-w-5xl">
    <h2 class="text-center text-3xl md:text-4xl font-bold !mb-10 text-gray-800">
      {{ section.settings.title | default: "Why Large Enterprises Choose Perfect Feast" }}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {% for block in section.blocks %}
        <div class="bg-white rounded-xl shadow-lg flex flex-col items-center text-center px-8 py-10 transition hover:shadow-xl">
          {% if block.settings.icon %}
            <div class="mb-5">
              <img
                src="{{ block.settings.icon | image_url: width: 64 }}"
                alt=""
                class="mx-auto h-12 w-12 object-contain" />
            </div>
          {% endif %}
          <h4 class="text-lg md:text-xl font-bold mb-4 text-gray-800">{{ block.settings.heading }}</h4>
          <ul class="feature-list w-full text-gray-600 text-sm space-y-2">
            {% if block.settings.point_1 != blank %}
              <li class="border-b border-gray-200 pb-2">{{ block.settings.point_1 }}</li>
            {% endif %}
            {% if block.settings.point_2 != blank %}
              <li class="border-b border-gray-200 pb-2">{{ block.settings.point_2 }}</li>
            {% endif %}
            {% if block.settings.point_3 != blank %}
              <li class="border-b border-gray-200 pb-2">{{ block.settings.point_3 }}</li>
            {% endif %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Feature Boxes",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Why Large Enterprises Choose Perfect Feast"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature Box",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Feature Icon"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Feature Heading",
            "default": "Feature Heading"
          },
          {
            "type": "text",
            "id": "point_1",
            "label": "Point 1",
            
          },
          {
            "type": "text",
            "id": "point_2",
            "label": "Point 2",
            
          }, {
            "type": "text",
            "id": "point_3",
            "label": "Point 3",
            
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Feature Boxes",
        "blocks": [
          {
            "type": "feature",
            "settings": {
              "heading": "Dedicated Account Management",
              "point_1": "Single point of contact for your program",
              "point_2": "Hands-on support from design through delivery",
              "point_3": "Custom design and delivery options"
            }
          }, {
            "type": "feature",
            "settings": {
              "heading": "Custom design and delivery options",
              "point_1": "Support for any size holiday program",
              "point_2": "First-line support for your employees",
              "point_3": "Release expired coupons"
            }
          }, {
            "type": "feature",
            "settings": {
              "heading": "Unmatched Coverage",
              "point_1": "Rural and urban store acceptance",
              "point_2": "Proactive store engagement",
              "point_3": "On call for employee or store questions"
            }
          }, {
            "type": "feature",
            "settings": {
              "heading": "Save time and money",
              "point_1": "Corporate tax advantages",
              "point_2": "Save time on delivery and support",
              "point_3": "Flexible shipping & delivery options"
            }
          }
        ]
      }
    ]
  }
{% endschema %}