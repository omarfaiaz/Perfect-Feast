  Order template â€” styled for PerfectFeast (Tailwind) 
  - Shows paginated order history with product images, status, and totals 
  - Sidebar with account details and address link 
{% endcomment %}

<section class="py-12 bg-gray-50 min-h-[60vh]">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Main: Orders -->
      <div class="lg:col-span-3">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Order history</h1>
        {% assign number_of_orders = customer.orders | size %}
        {% if number_of_orders > 0 %}
          {% paginate customer.orders by 10 %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
              {% for order in customer.orders %}
                <div class="bg-white rounded-xl shadow p-6 flex flex-col h-full">
                  <div class="w-full h-40 bg-gray-100 rounded overflow-hidden flex items-center justify-center mb-4">
                    {% if order.line_items.first.image %}
                      <img
                        src="{{ order.line_items.first.image | image_url: '400x' }}"
                        alt="{{ order.line_items.first.title }}"
                        width="400"
                        height="400"
                        class="w-full h-full object-cover">
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                    {% endif %}
                  </div>
                  <div class="flex-1 flex flex-col justify-between">
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 mb-1">
                        <a href="{{ order.customer_url }}" class="hover:text-brandPrimary">{{ order.name }}</a>
                      </h3>
                      <div class="text-sm text-gray-600 mb-2">
                        Placed: {{ order.created_at | date: "%b %d, %Y" }}
                      </div>
                      <div class="flex flex-wrap gap-2 mb-2">
                        <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-700">{{ order.financial_status_label }}</span>
                        <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-gray-200 text-gray-700">{{ order.fulfillment_status_label }}</span>
                      </div>
                    </div>
                    <div class="mt-2 text-right">
                      <span class="text-base font-bold text-brandPrimary">{{ order.total_price | money }}</span>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="mt-8">
              {% render 'pagination'
                , pagination: paginate %}
            </div>
          {% endpaginate %}
        {% else %}
          <div class="w-full h-80 flex items-center justify-center bg-white rounded-xl shadow">
            <h2 class="text-base md:text-2xl font-medium text-gray-600">You currently don't have any orders</h2>
          </div>
        {% endif %}
      </div>

      <!-- Sidebar: Account Details -->
      <aside class="bg-white rounded-xl shadow p-6 h-fit">
        <h2 class="text-xl font-bold text-gray-700 mb-4">Account details</h2>
        <div class="mb-4">
          {{ customer.default_address | format_address }}
        </div>
        <a href="{{ routes.account_addresses_url }}" class="text-sm text-brandPrimary hover:underline">View addresses</a>
      </aside>
    </div>
  </div>
</section>